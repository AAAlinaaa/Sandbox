<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            name="com.b2i.bookShelfRCP"
            application="org.eclipse.e4.ui.workbench.swt.E4Application">
         <property
               name="lifeCycleURI"
               value="bundleclass://com.b2i.bookShelfRCP/com.b2i.bookshelfrcp.E4LifeCycle">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/com.b2i.bookShelfRCP/css/default.css">
         </property>
         <property
               name="appName"
               value="com.b2i.bookShelfRCP">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.b2i.bookShelfRCP"
            name="Sample Category">
      </category>
      <view
            category="com.b2i.bookShelfRCP"
            class="com.b2i.bookshelfrcp.views.SampleView"
            icon="icons/sample.gif"
            id="com.b2i.bookshelfrcp.views.SampleView"
            name="Sample View">
      </view>
      <view
            class="com.b2international.library.LibraryView"
            id="com.b2international.library.librarytreeview"
            name="LibraryView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="com.b2i.bookshelfrcp.views.SampleView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
         <view
               id="com.b2international.library.librarytreeview"
               relationship="left">
         </view>
         <showInPart></showInPart>
         <view
               id="com.b2international.library.librarytreeview"
               minimized="false"
               relationship="left">
         </view>
         <view
               id="com.b2international.library.librarytreeview"
               minimized="false"
               relationship="stack">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.b2i.bookshelfrcp.bookselected">
         <with
               variable="myactivePartId">
            <equals
                  value="com.b2i.bookshelfrcp.parts.librarypart">
            </equals>
         </with>
      </definition>
</extension>
</plugin>